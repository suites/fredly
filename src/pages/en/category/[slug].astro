---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Bio from '@/components/Bio.astro';
import PostCard from '@/components/PostCard.astro';
import { getCategoryBySlug, getAllCategorySlugs } from '@/utils/category';
import { sortByDate } from '@/utils/date';
import { getLocalizedPostList } from '@/utils/translation-map.util';
import { SITE_URL } from '@/consts';

export async function getStaticPaths() {
  const categorySlugs = getAllCategorySlugs();
  const posts = await getCollection('blog');

  return categorySlugs.map((slug) => {
    const categoryPosts = posts.filter(
      (post) => 'category' in post.data && post.data.category === slug
    );

    return {
      params: { slug },
      props: {
        posts: categoryPosts,
        categorySlug: slug,
      },
    };
  });
}

interface Props {
  posts: CollectionEntry<'blog'>[];
  categorySlug: string;
}

const { posts, categorySlug } = Astro.props;
const categoryInfo = getCategoryBySlug(categorySlug);
const categoryName = categoryInfo?.name || categorySlug;

const sortedPosts = sortByDate(getLocalizedPostList(posts, 'en'));

const pageTitle = `${categoryName} Category`;
const pageDescription = `Explore posts in ${categoryName}.`;
const canonical = new URL(`/en/category/${categorySlug}/`, SITE_URL).toString();
const alternates = [
  { hreflang: 'ko', href: new URL(`/category/${categorySlug}/`, SITE_URL).toString() },
  { hreflang: 'en', href: canonical },
  { hreflang: 'x-default', href: new URL(`/category/${categorySlug}/`, SITE_URL).toString() },
];
---

<Layout title={pageTitle} description={pageDescription} canonical={canonical} lang="en" alternates={alternates}>
  <Header />

  <div class="content-wrapper">
    <div class="layout-content">
      <main class="main-wrapper">
        <h1 class="category-heading">{categoryName}</h1>

        {sortedPosts.length > 0 ? (
          sortedPosts.map((post) => <PostCard post={post} />)
        ) : (
          <p class="no-posts">No posts yet.</p>
        )}
      </main>

      <Bio />
    </div>
  </div>

  <Footer />
</Layout>

<style>
  .category-heading {
    margin: 0.5em 0 0.8em;
    font-size: 32px;
    color: #fff;
    font-weight: 700;
    line-height: 44px;
    letter-spacing: 1px;
  }

  .no-posts {
    padding: 4rem 0;
    text-align: center;
    color: rgba(255, 255, 255, 0.5);
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    .category-heading {
      font-size: 28px;
      line-height: 38px;
    }
  }
</style>
