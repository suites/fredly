---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Bio from '@/components/Bio.astro';
import PostCard from '@/components/PostCard.astro';
import { SITE_DESCRIPTION, SITE_URL } from '@/consts';
import { sortByDate } from '@/utils/date';
import { getLocalizedPostList } from '@/utils/translation-map.util';

const posts = await getCollection('blog');
const koFirstPosts = getLocalizedPostList(posts, 'ko');
const sortedPosts = sortByDate(koFirstPosts);

const canonical = new URL('/', SITE_URL).toString();
const alternates = [
  { hreflang: 'ko', href: canonical },
  { hreflang: 'en', href: new URL('/en/', SITE_URL).toString() },
  { hreflang: 'x-default', href: canonical },
];
---

<Layout title="The Gradient of Logic" description={SITE_DESCRIPTION} canonical={canonical} lang="ko" alternates={alternates}>
  <Header />

  <script is:inline>
    (() => {
      const KEY = 'fredly-en-home-redirected';
      try {
        if (localStorage.getItem(KEY)) return;

        const isBot = /bot|crawler|spider|crawling|google|bing|yandex|duckduck|baidu/i.test(
          navigator.userAgent || ''
        );
        if (isBot) return;

        const lang = (navigator.language || '').toLowerCase();
        if (lang.startsWith('en')) {
          localStorage.setItem(KEY, '1');
          window.location.replace('/en/');
        }
      } catch {
        // ignore redirect failure
      }
    })();
  </script>
  
  <div class="content-wrapper">
    <div class="layout-content">
      <main class="main-wrapper">
        {sortedPosts.map((post) => (
          <PostCard post={post} />
        ))}
      </main>
      
      <Bio />
    </div>
  </div>
  
  <Footer />
</Layout>

<style>
  /* content-wrapper, layout-content, main-wrapper는 global.css에서 통일 관리 */
</style>
