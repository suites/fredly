---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Bio from '@/components/Bio.astro';
import PostCard from '@/components/PostCard.astro';
import { SITE_DESCRIPTION } from '@/consts';
import { sortByDate } from '@/utils/date';

// 모든 블로그 포스트 가져오기 (기본 홈은 KO만 노출)
const posts = await getCollection('blog');
const koPosts = posts.filter((post) => (post.data.locale || (post.id.includes('-en/') ? 'en' : 'ko')) !== 'en');
const sortedPosts = sortByDate(koPosts);
---

<Layout title="The Gradient of Logic" description={SITE_DESCRIPTION}>
  <Header />
  
  <div class="content-wrapper">
    <div class="layout-content">
      <main class="main-wrapper">
        {sortedPosts.map((post) => (
          <PostCard post={post} />
        ))}
      </main>
      
      <Bio />
    </div>
  </div>
  
  <Footer />
</Layout>

<style>
  /* content-wrapper, layout-content, main-wrapper는 global.css에서 통일 관리 */
</style>